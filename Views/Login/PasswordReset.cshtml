
@{
    ViewData["Title"] = "PasswordReset";
}

<h1>PasswordReset</h1>

<form action="/Login/form1" method="post">
    <div>
        <div>
            <h3>Username: </h3>
            <p><input type="text" name="txtuser" /></p>
        </div>
        <div>
            <h3>Password: </h3>
            <p><input type="password" name="pwpw" /></p>
        </div>
        @if (ViewBag.LoginError != null)
        {
            <div>
                <p>Username or Password is not correct! Please try again!</p>
            </div>
        }
        <div>
            <p><input type="submit" value="Login" /></p>
        </div>
    </div>
</form>
