}

<h1>Password Change</h1>

<form action="/Profile/PasswordChange" method="post">
    <div>
        <div>
            <h3>recent Password: </h3>
            <p><input type="password" name="oldPassword" /></p>
        </div>
        <div>
            <h3>New Password: </h3>
            <p><input type="password" name="newPassword" /></p>
        </div>
        @if (ViewBag.PasswordMessage != null)
        {
            <div>
                <p>ViewBag.PasswordMessage</p>
            </div>
        }
        <div>
            <p><input type="submit" value="PasswordChange" /></p>
        </div>
    </div>
</form>