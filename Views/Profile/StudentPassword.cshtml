@{
}

<h1>Reset Student Password</h1>

<form action="/Profile/StudentPassword" method="post">
    <div>
        <div>
            <h3>Admin Password: </h3>
            <p><input type="password" name="adminPassword" /></p>
        </div>
        <div>
            <h3>Student Account: </h3>
            <p><input type="text" name="studentAccount" /></p>
        </div>
        <div>
            <h3>New Student Password: </h3>
            <p><input type="password" name="newPassword" /></p>
        </div>
        @if (ViewBag.PasswordMessage != null)
        {
            if (ViewBag.PasswordState)
            {
                <div class="alert alert-success">
                    @ViewBag.PasswordMessage
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    @ViewBag.PasswordMessage
                </div>
            }

        }
        <div>
            <p><input type="submit" value="PasswordChange" /></p>
        </div>
    </div>
</form>